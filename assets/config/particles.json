{
  "background": {
    "color": {
      "value": "#ffffff"
    },
    "image": "url('../images/background.png')",
    "position": "50% 50%",
    "repeat": "no-repeat",
    "size": "cover",
    "opacity": 0.8
  },
  "backgroundMask": {
    "cover": {
      "color": {
        "value": {
          "r": 255,
          "g": 255,
          "b": 255
        }
      }
    },
    "enable": true
  },
  "fullScreen": {
    "enable": true,
    "zIndex": -1
  },
  "interactivity": {
    "detectsOn": "window",
    "events": {
      "onClick": {
        "enable": true,
        "mode": "repulse"
      },
      "onHover": {
        "enable": true,
        "mode": "bubble",
        "parallax": {
          "force": 60
        }
      }
    },
    "modes": {
      "bubble": {
        "distance": 200,
        "duration": 2,
        "opacity": 0.5,
        "size": 0
      },
      "grab": {
        "distance": 400
      },
      "repulse": {
        "distance": 200
      }
    }
  },
  "particles": {
    "color": {
      "value": "#ffffff"
    },
    "links": {
      "color": {
        "value": "#ffffff"
      },
      "distance": 150,
      "opacity": 0.2,
      "enable": false
    },
    "move": {
      "speed": 0.3,
      "attract": {
        "rotate": {
          "x": 600,
          "y": 1200
        }
      },
      "enable": true,
      "outModes": {
        "bottom": "out",
        "left": "out",
        "right": "out",
        "top": "out"
      }
    },
    "collisions": {
      "mode": "absorb"
    },
    "number": {
      "density": {
        "enable": true
      },
      "value": 10
    },
    "opacity": {
      "animation": {
        "speed": 0.3,
        "minimumValue": 0.2
      },
      "value": 0.3
    },
    "size": {
      "random": {
        "enable": false
      },
      "value": {
        "min": 10,
        "max": 70
      },
      "animation": {
        "speed": 20,
        "minimumValue": 1
      }
    }
  }
}
